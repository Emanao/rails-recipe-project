
<%= bootstrap_form_for  :user, url:"/signup", html: {class:"basic-form"} do |f| %>
    <%= f.text_field :name, hide_label: true, placeholder:"Name" %>
    <%= f.email_field :email, hide_label: true, placeholder:"Email address" %>
    <%= f.password_field :password, hide_label: true, placeholder:"Password" %>
    <%= f.submit "Sign Up", class:"btn-lg btn-primary btn-block" %>
    <div class="alert alert-light text-center">Have a Recipeshub account? <a href="/login"><strong>Sign In</strong></a></div>
<% end %>
